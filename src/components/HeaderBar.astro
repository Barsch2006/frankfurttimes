<script defer>
try {
  document
    .querySelector("header .open_aside input[type='checkbox']")
    ?.addEventListener("change", () => {
      document.querySelector("header .open_aside input[type='checkbox']")
        .checked
        ? (document.querySelector("aside").style.display = "flex")
        : (document.querySelector("aside").style.display = "none");
    });
} catch (err) {
  console.error(err);
}
</script>

