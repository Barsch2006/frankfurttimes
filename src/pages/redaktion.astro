---
import DefaultLayout from "../layouts/DefaultLayout.astro";
const redaktionsArr = await Astro.glob("../content/redaktion/*.md");
---

<DefaultLayout pageTitle="Redaktion">
  <div class="redaktion__wrapper">
    {
      redaktionsArr.map((red) => {
        return (
          <article class="redaktion_card">
            <img src={red.frontmatter.img} />
            <p class="redaktion_card__titel">{red.frontmatter.titel}</p>
            <h3>{red.frontmatter.name}</h3>
            <p class="redaktion_card_year">
              Angestellt seit: {red.frontmatter.works_since}
            </p>
            <div set:html={red.rawContent()} />
          </article>
        );
      })
    }
  </div>
</DefaultLayout>

<style>
  .redaktion__wrapper {
    width: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: row;
    gap: 12px;
    padding-left: 20px;
    padding-right: 20px;
    box-sizing: border-box;
    overflow-y: hidden;
    overflow-x: scroll;
  }

  /* Style the .redaktion_card articles */
  .redaktion_card {
    background-color: #ffffff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.2);
    margin-bottom: 20px;
    box-sizing: border-box;
    width: 100%;
    max-height: 700px;
    height: 700px;
    max-width: 380px;
  }

  @media screen and (min-width: 600px) {
    .redaktion_card {
      min-width: 300px;
    }
  }

  .redaktion_card img {
    width: 100%;
    height: auto;
    border-radius: 8px;
    aspect-ratio: 1/1;
  }

  /* Style the h3 headings */
  .redaktion_card h3 {
    font-size: 24px;
    color: #333333;
    margin-bottom: -6px;
  }

  /* Style the .redaktion_card__titel paragraphs */
  .redaktion_card__titel {
    font-size: 18px;
    color: #666666;
  }

  /* Style the .redaktion_card_year paragraphs */
  .redaktion_card_year {
    font-size: 16px;
    color: #999999;
  }

  .redaktion_card div {
    margin-top: 6px;
  }
</style>
